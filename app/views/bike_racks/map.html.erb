<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  racks = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(racks);
  handler.fitMapToBounds();
});

</script>

<script type="text/javascript">

function showRacks(){
	racks = handler.addMarkers(<%=raw @hash.to_json %>);
};

function clearRacks(){
	markers = handler.removeMarkers(racks);
};

function showWaterFountains(){
	fountainMarkers = handler.addMarkers(<%=raw @hashw.to_json %>);
};

function clearWaterFountains(){
	fountainMarkers = handler.removeMarkers(fountainMarkers);
}

</script>






