<meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=geometry"></script>


<div class="row"><!-- input-group -->
  <div class="col-md-4"></div>
  <div class="col-md-5">
    <div div="panel">
      <div class="input-group">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button" onclick="codeAddress()">Find bike racks!</button>
        </span>
        <form onsubmit="codeAddress(); return false">
          <input id="address" class="form-control" placeholder="Enter address in Vancouver BC...">
        </form>
      </div><!-- /input-group --> 
    </div>
  </div>
  <div class="col-md-3">
    <button class="btn btn-default" type="button" onclick="showFavourites()">Show Favourites!</button>
  </div>
</div>

<div id="map-container">
  <div id="map"></div>
</div>

<script>
var geocoder;
var map;
var markers = [];
var br = (<%=raw  @bike_racks.to_json %>);
var myLatLng = new google.maps.LatLng(49.279621, -123.125496);
var myBounds = new google.maps.LatLngBounds(
		      new google.maps.LatLng(49.195335, -123.244972),
		      new google.maps.LatLng(49.330883, -122.960186));
var infowindow = new google.maps.InfoWindow();



  function showFavourites() {

if (<%= !logged_in? %>) {
  window.location.href = "/login";
} else{

var favBR = (<%=raw @user.favorite_bike_racks.to_json %>);
    deleteMarkers();

  geocoder.geocode( { 'address': "300 homer st Vancouver"}, function(results, status) {
    if (status == google.maps.GeocoderStatus.OK) {
    	if(myBounds.contains(results[0].geometry.location)){
	      
	      var counter = 0;
	      var radius = 1000;

	      for(i = 0; i < favBR.length; i++) {
	      	var bikeRack = favBR[i];

	      	var sid = bikeRack.id;
                var numbikeracks = bikeRack.quantity;
	      	var rackLatLng = new google.maps.LatLng(bikeRack.latitude, bikeRack.longitude);

	      		counter++;
	      		var marker = new google.maps.Marker({
	      			map: map,
	      			position: rackLatLng,
              num: numbikeracks,
              id: sid,
              animation: google.maps.Animation.DROP
	      		});


            markers.push(marker);


            google.maps.event.addListener(marker, 'click', function(id) {
              infowindow.setContent('<p>Number of bike racks: ' + this.num.toString() + '</p>' + 
                '<row> <button onclick="get_info('+ this.id +')">Show</button> <button onclick="myFunction()">Tweet</button> ' + 

'<a rel="nofollow" data-method="delete" href="/favorite_bike_racks/'+this.id+'">Remove from favorites</a>' 
+ '</row>');
              infowindow.open(map, this);
                                          
            });


	      	
	      }
	      if (counter == 0){
	      	alert("No bike racks in favourite list!")
	      }

	  } else {
	  	alert("Sorry, something broke...");
	  }
    } else {
      alert('Geocode was not successful for the following reason: ' + status);
    }
  });
}
}

function initialize() {
  geocoder = new google.maps.Geocoder();
    map = new google.maps.Map(document.getElementById('map'), {
    zoom: 11,
    center: myLatLng,
    mapTypeId: google.maps.MapTypeId.TERRAIN
  });
  
  
}

function computeDistance(pt1, pt2){
	return google.maps.geometry.spherical.computeDistanceBetween(pt1, pt2);
};

// Deletes all markers in the array by removing references to them.
  function deleteMarkers() {
        //Loop through all the markers and remove
        for (var i = 0; i < markers.length; i++) {
            markers[i].setMap(null);
        }
        markers = [];
    };

//The following function is to favourite bike racks
var get_info = function(id){

    window.location.href="/bike_racks/"+id;

};

//The following js functions are based on the Google Maps API Samples
  function codeAddress() {
    deleteMarkers();
  var address = document.getElementById('address').value;
  geocoder.geocode( { 'address': address}, function(results, status) {
    if (status == google.maps.GeocoderStatus.OK) {
    	if(myBounds.contains(results[0].geometry.location)){
	      map.setCenter(results[0].geometry.location);
        map.setZoom(14);
	      
	      var counter = 0;
	      var radius = 1000;

	      for(i = 0; i < br.length; i++) {
	      	var bikeRack = br[i];

	      	var sid = bikeRack.id;

          var numbikeracks = bikeRack.quantity;
	      	var rackLatLng = new google.maps.LatLng(bikeRack.latitude, bikeRack.longitude);
	      	if(computeDistance(results[0].geometry.location, rackLatLng) < radius){
	      		counter++;
	      		var marker = new google.maps.Marker({
	      			map: map,
	      			position: rackLatLng,
              num: numbikeracks,
              id: sid,
              animation: google.maps.Animation.DROP
	      		});
	      		
            markers.push(marker);
            
            
            
if(<%= !logged_in? %>) {
            google.maps.event.addListener(marker, 'click', function(id) {
              infowindow.setContent('<p>Number of bike racks: ' + this.num.toString() + '</p>' +
                '<row> <button onclick="get_info('+ this.id +')">Show</button> <button onclick="myFunction()">Tweet</button> <a href="/login">Add to favorites</a></row>');
              infowindow.open(map, this);            
            });
} else {

var favBR = (<%= raw @user.favorite_bike_racks.to_json %>);

var favourited = false;
for(k = 0; k < favBR.length; k++) {

if(sid == favBR[k].id) {
favourited = true;
}

}

if(favourited) {

            google.maps.event.addListener(marker, 'click', function(id) {
              infowindow.setContent('<p>Number of bike racks: ' + this.num.toString() + '</p>' +
                '<row> <button onclick="get_info('+ this.id +')">Show</button> <button onclick="myFunction()">Tweet</button> <a rel="nofollow" data-method="delete" href="/favorite_bike_racks/'+this.id+'">Remove from favorites</a></row>');
              infowindow.open(map, this);
                                          
            });

} else {


            google.maps.event.addListener(marker, 'click', function(id) {
              infowindow.setContent('<p>Number of bike racks: ' + this.num.toString() + '</p>' +

                '<row> <button onclick="get_info('+ this.id +')">Show</button> <button onclick="myFunction()">Tweet</button> <a rel="nofollow" data-method="post" href="/favorite_bike_racks?bike_rack_id='+this.id+'">Add to favorites</a></row>');
              infowindow.open(map, this);

              

            });

}

}


	      	}
	      }
	      if (counter == 0){
	      	alert("No bike racks in this location...")
	      }

	  } else {
	  	alert("Sorry, we don't cover this area.... yet!");
	  }
    } else {
      alert('Geocode was not successful for the following reason: ' + status);
    }
  });
}
google.maps.event.addDomListener(window, 'load', initialize);
    </script>
