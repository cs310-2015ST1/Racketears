<h1>Listing Water Fountains</h1>

<table border="1" style="width:50%; margin-left:1%">
  <tr>
    <th>Location</th> 
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Actions</th>
  </tr>

  <tbody>
    <% @water_fountains.each do |water_fountain| %>
      <tr>
        <td><%= water_fountain.location %></td>
        <td><%= water_fountain.lat %></td>
        <td><%= water_fountain.lon %></td>
        <td><%= link_to 'Show', water_fountain %>
        <%= link_to 'Edit', edit_water_fountain_path(water_fountain) %>
        <%= link_to 'Destroy', water_fountain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</table>



