<p id="notice"><%= notice %></p>

<h1>Listing Water Fountains</h1>

<table>
  <thead>
    <tr>
      <th>Location</th>
      <th>Lat</th>
      <th>Lon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @water_fountains.each do |water_fountain| %>
      <tr>
        <td><%= water_fountain.location %></td>
        <td><%= water_fountain.lat %></td>
        <td><%= water_fountain.lon %></td>
        <td><%= link_to 'Show', water_fountain %></td>
        <td><%= link_to 'Edit', edit_water_fountain_path(water_fountain) %></td>
        <td><%= link_to 'Destroy', water_fountain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

